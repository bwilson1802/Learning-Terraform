
# create two files
1.  variables.tf
2.  values.tfvars


# setup for two values 

resource _azurerm_resource_groups" "rg" {
for_each = var.resource_groups

  name = each.key
  location = each.value
}

# setup for more than two values




resource _azurerm_resource_groups" "rg_count" {
count = 10

  name = rg_count-${count.index + 1}"
  location = "USG"
}